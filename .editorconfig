root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 4
max_line_length = 100
tab_width = 4
trim_trailing_whitespace = true

[*.md]
trim_trailing_whitespace = false

[*.{scss, css, js, ts, vue}]
indent_size = 2
max_line_length = 120

[*.{yml,yaml,sh,conf}]
indent_size = 2

[Makefile]
indent_style = tab
